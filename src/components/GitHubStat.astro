const iconWithLabel = (icon: string, label: string, iconSize: number) => {
	if (typeof label === 'number' && label <= 0) {
		return ''
	}
	return `
      <svg
        class="icon"
        y="-12"
        viewBox="0 0 16 16"
        version="1.1"
        width="${iconSize}"
        height="${iconSize}"
      >
        ${icon}
      </svg>
    `
}
const allRepos = await octokit.rest.repos.listForAuthenticatedUser({
	visibility: 'public',
	per_page: 100
})

const repos = allRepos.data
	.filter((r: RepoInfo) => !r.fork)
	.sort((a: RepoInfo, b: RepoInfo) =>
		a.stargazers_count < b.stargazers_count ? 1 : -1
	)
let totalStars = 0
let topLang = new Map()
const totalRepos = allRepos.data.length
allRepos.data.map(async (a: RepoInfo) => {
	totalStars += a.stargazers_count
	if (a.language) {
		topLang.set(
			a.language,
			topLang.has(a.language) ? topLang.get(a.language) + 1 : 1
		)
	}
})
---

<div class='flex flex-row justify-between'>
	<div class='flex flex-row items-center space-x-1'>
		<Repo width='20' height='20' /><span>Repo: {totalRepos}</span>
	</div>
	<div class='flex flex-row items-center space-x-1'>
		<Star width='20' height='20' /><span>Repo: {totalStars}</span>
	</div>
</div>
<div>
	<TopLanguage topLang={topLang} />
</div>
