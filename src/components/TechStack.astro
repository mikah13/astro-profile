---
import ChevronRight from './icons/ChevronRight.astro'
---

<style>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer utilities {
		@variants responsive {
			.no-scrollbar::-webkit-scrollbar {
				display: none;
			}
			/* Hide scrollbar for IE, Edge and Firefox */
			.no-scrollbar {
				-ms-overflow-style: none; /* IE and Edge */
				scrollbar-width: none; /* Firefox */
			}
		}
	}
</style>

